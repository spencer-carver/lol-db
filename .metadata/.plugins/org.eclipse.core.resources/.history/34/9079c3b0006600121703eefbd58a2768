<%
Connection c = null;
c = DriverManager.getConnection("jdbc:google:rdbms://league-of-legends-db:league-of-legends-db/LOL");
ResultSet rs = c.createStatement().executeQuery("SELECT Name, ImagePath, Health FROM CHAMPIONS"); %>

<table style="border: 1px solid black">
<tbody>
<tr>

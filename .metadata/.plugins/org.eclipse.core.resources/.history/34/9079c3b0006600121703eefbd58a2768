</tr> <%
while (rs.next()){
    String champName = rs.getString("Name");
    String content = rs.getString("ImagePath");
    int hp = rs.getInt("Health"); %>

<tr>
<td><%= champName %></td>
<td><img src="<%= content %>"></img></td>
<td><%= hp %></td>
</tr>

<% }
c.close(); %>

